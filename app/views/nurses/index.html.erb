<p id="notice"><%= notice %></p>

<h1>Nurses</h1>
<%= paginate @nurses%>

<table class="table table-striped" style="background-color:#42F1BD;">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>User</th>
      <th>cantidad de vacunas aplicadas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nurses.each do |nurse| %>
      <tr>
        <td><%= nurse.nombre %></td>
        <td><%= nurse.apellido %></td>
        <td><%= nurse.user_id %></td>
        <td><%= link_to nurse.applications.count, applications_path(:nurse_id => nurse.id) %></td>

        <td><%= link_to 'Show', nurse %></td>
        <td><%= link_to 'Edit', edit_nurse_path(nurse) %></td>
        <td><%= link_to 'Destroy', nurse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

