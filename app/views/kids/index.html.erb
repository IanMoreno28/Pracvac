<p id="notice"><%= notice %></p>

<h1>Kids</h1>
<%= paginate @kids%>

<form method="GET" action="/kids">
  Nombre o apellido: <input type="text" name="filter" />
  <select name="gender">
    <option value="">Seleccione sexo</option>
    <option value="1">Masculino</option>
    <option value="2">Femenino</option>
  </select>
  <input type="submit" />
</form>

<table class="table table-striped" style="background-color:#42F1BD;">
  <thead>
    <tr>
      <th><%= link_to "Nombre", kids_path(:sort => true, :by => "nombre", :order => (params[:order] == "asc" ? "desc" : "asc")) %></th>
      <th><%= link_to "Apellido", kids_path(:sort => true, :by => "apellido", :order => (params[:order] == "asc" ? "desc" : "asc")) %></th>
      <th><%= link_to "Fecha Nacimiento", kids_path(:sort => true, :by => "Fecha_nac", :order => (params[:order] == "asc" ? "desc" : "asc")) %></th>
      <th><%= link_to "Sexo", kids_path(:sort => true, :by => "sexo", :order => (params[:order] == "asc" ? "desc" : "asc")) %></th>
      <th><%= link_to "DNI", kids_path(:sort => true, :by => "dni", :order => (params[:order] == "asc" ? "desc" : "asc")) %></th>
      <th><%= link_to "Edad", kids_path(:sort => true, :by => "Fecha_nac", :order => (params[:order] == "asc" ? "desc" : "asc")) %></th>

      <!-- <th>Cantidad de vacunas recibidas</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kids.each do |kid| %>
      <tr>
        <td><%= kid.nombre %></td>
        <td><%= kid.apellido %></td>
        <td><%= kid.Fecha_nac %></td>
        <td><%= kid.sexo %></td>
        <td><%= kid.dni %></td>

        <td><%= distance_of_time_in_words(kid.Fecha_nac, Time.now) %></td>
        <td><%#= link_to kids.applications.count, applications_path(:kids_id => kid.id) %></td>

        <td><%= link_to 'Show', kid %></td>
        <td><%= link_to 'Edit', edit_kid_path(kid) %></td>
        <td><%= link_to 'Destroy', kid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

