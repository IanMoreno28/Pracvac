<p id="notice"><%= notice %></p>

<h1>Applications</h1>

<table class="table table-striped" style="background-color:#42F1BD;">
  <thead>
    <tr>
      <th>Dosis</th>
      <th>Fecha</th>
      <th>Nurse</th>
      <th>Kids</th>
      <th>Vaccine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.dosis %></td>
        <td><%= application.fecha %></td>
        <td><%= application.nurse_id.full_name %></td>
        <td><%= application.kids_id.full_name %></td>
        <td><%= application.vaccine_id.nombre %></td>
        <td><%= link_to 'Show', application %></td>
        <td><%= link_to 'Edit', edit_application_path(application) %></td>
        <td><%= link_to 'Destroy', application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Application', new_application_path %>
