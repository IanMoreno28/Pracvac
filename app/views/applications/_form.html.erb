<%= form_with(model: application) do |form| %>
  <% if application.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(application.errors.count, "error") %> prohibited this application from being saved:</h2>

      <ul>
        <% application.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :dosis %>
    <%= form.number_field :dosis %>
  </div>

  <div class="field">
    <%= form.label :fecha %>
    <%= form.date_select :fecha %>
  </div>

  <div class="field">
    <%= form.label :nurse_id %>
    <%= collection_select(:application, :nurse_id, Nurse.all, :id, :full_name )  %>
  </div>

  <div class="field">
    <%= form.label :kids_id %>
    <%= collection_select(:application, :kids_id, Kid.all, :id, :full_name )  %>
  </div>

  <div class="field">
    <%= form.label :vaccine_id %>
    <%= collection_select(:application, :vaccine_id, Vaccine.all, :id, :nombre )  %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
